<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.dashboard.FileUploadFragment">

    <Button android:id="@+id/select_file_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick file"
            android:layout_marginTop="8dp"
            android:minWidth="160dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/selected_file_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Selected file: "
                  android:layout_marginTop="8dp"
                  android:minWidth="140dp"/>

        <TextView android:id="@+id/selected_file_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:minWidth="140dp"
                  android:text="None"/>
    </LinearLayout>

    <Button android:id="@+id/upload_file_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload file"
            android:enabled="false"
            android:layout_marginTop="8dp"
            android:minWidth="160dp"/>

    <ProgressBar
       android:id="@+id/progress_bar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:max="100"
       style="@style/Widget.AppCompat.ProgressBar.Horizontal"
       tools:progress="0"
    />

</LinearLayout>
